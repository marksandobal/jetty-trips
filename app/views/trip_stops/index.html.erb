<div class="container">
  <div class="row text-center">
    <div class="col-12">
      <div class=" border-bottom">
        <h2>Paradas de Viaje </h2>
      </div>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-12">
      <% @trip_stops.each do |stop| %>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title text-gren"><%= stop.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted">Horario de parada</h6>
            <p class="card-text text-gren"><%= stop.departure_time.strftime("%H:%M %p") %></p>
            <div>
              <% if stop.boarding %>
                <% action_stop = 'Ascenso' %>
              <% else %>
                <% action_stop = 'Descenso' %>
              <% end %>
              <strong> <%= action_stop %>: </strong> <%= stop.address %>
            </div>
          </div>
        </div>
        <br>
      <% end %>
    </div>
  </div>
</div>